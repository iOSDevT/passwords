<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="password_activity_title">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/heading_colour</item>
    </style>

    <style name="edit_text">
        <item name="android:background">#E2E2E2</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
    </style>

    <style name="menu_option">
        <item name="android:textSize">@dimen/menu_option_text_size</item>
        <item name="android:textColor">@color/menu_option_text</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="menu_option_checkbox" parent="menu_option">
        <item name="android:checkMark">?android:attr/textCheckMark</item>
    </style>
</resources>
